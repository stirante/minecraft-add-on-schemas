{
    "$schema": "http://json-schema.org/draft-07/schema",
    "type": "object",
    "title": "Server Entity",
    "description": "Behavior pack entity definition",
    "definitions": {
        "components": {
            "allOf": [
                { "$ref": "https://raw.githubusercontent.com/BlueFrog130/minecraft-add-on-schemas/master/entities/ai_goals.schema.json" },
                { "$ref": "https://raw.githubusercontent.com/BlueFrog130/minecraft-add-on-schemas/master/entities/attributes.schema.json" },
                { "$ref": "https://raw.githubusercontent.com/BlueFrog130/minecraft-add-on-schemas/master/entities/components.schema.json" },
                { "$ref": "https://raw.githubusercontent.com/BlueFrog130/minecraft-add-on-schemas/master/entities/properties.schema.json" }
            ]
        }
    },
    "properties": {
        "format_version": {
            "type": "string",
            "default": "1.16.2"
        },
        "minecraft:entity": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "description": {
                    "type": "object",
                    "properties": {
                        "identifier": {
                            "type": "string",
                            "description": "ID used to reference and summon entity."
                        },
                        "is_spawnable": {
                            "type": "boolean",
                            "default": true,
                            "description": "Set to determine if this entity has a spawn egg."
                        },
                        "is_summonable": {
                            "type": "boolean",
                            "default": true,
                            "description": "Flag to mark this entity as being summonable or not."
                        },
                        "is_experimental": {
                            "type": "boolean",
                            "default": false
                        },
                        "runtime_identifier": {
                            "type": "string",
                            "description": "The identifier for the class to construct this entity with."
                        },
                        "animations": {
                            "type": "object",
                            "description": "Mapping of animations or animation controllers, where key is the name internal to the entity and the value is actual animation or animation controller name.",
                            "patternProperties": {
                                "^.+$": {
                                    "type": "string"
                                }
                            }
                        },
                        "scripts": {
                            "type": "object",
                            "properties": {
                                "animate": {
                                    "type": "array",
                                    "description": "A list of animations and animation controllers to run.",
                                    "items": {
                                        "type": "string",
                                        "description": "Internal to the entity name of animation or animation controller."
                                    }
                                }
                            }
                        }
                    },
                    "default": {
                        "identifier": "",
                        "is_spawnable": true,
                        "is_summonable": true,
                        "is_experimental": false
                    }
                },
                "component_groups": {
                    "type": "object",
                    "default": {},
                    "patternProperties": {
                        "^.*$": {
                            "$ref": "#/definitions/components"
                        }
                    },
                    "additionalProperties": false
                },
                "components": {
                    "$ref": "#/definitions/components"
                },
                "events": {
                    "type": "object",
                    "allOf": [
                        { "$ref": "https://raw.githubusercontent.com/BlueFrog130/minecraft-add-on-schemas/master/entities/built-in_events.schema.json" },
                        {
                            "patternProperties": {
                                "^.*$": {
                                    "$ref": "https://raw.githubusercontent.com/BlueFrog130/minecraft-add-on-schemas/master/types/event.schema.json"
                                }
                            },
                            "additionalProperties": false,
                            "default": {}
                        }
                    ]
                }
            }
        }
    },
    "required": ["minecraft:entity"]
}