{
    "$schema": "http://json-schema.org/draft-07/schema",
    "type": "object",
    "properties": {
        "effect": {
            "type": "string",
            "$ref": "../constants/effects.schema.json"
        },
        "duration": {
            "type": "number",
            "description": "duration in seconds"
        },
        "amplifier": {
            "type": "number",
            "description": "Amplifier level"
        },
        "ambient": {
            "type": "boolean",
            "description": "If it is to be considered an ambient effect\nBlueFrog's Note: Could not find example to verify type and purpose"
        },
        "visible": {
            "type": "boolean",
            "description": "Should the effect be considered visible"
        }
    }
}